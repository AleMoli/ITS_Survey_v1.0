<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">

    <persistence-unit name="its_persistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ITS.Model.Questionario</class>
        <properties>
            <property name="org.hibernate.jpa.driver" value="com.mysql.jdbc.Driver" />
            <property name="org.hibernate.jpa.url" value="jdbc:mysql://127.0.0.1:3306/its_prova" />
            <property name="org.hibernate.jpa.user" value="root" />
            <property name="org.hibernate.jpa.password" value="admin" />

            <property name="org.hibernate.jpa.dialect" value="org.hibernate.jpa.dialect.MySQLDialect" />
            <property name="org.hibernate.jpa.show_sql" value="true" />
            <property name="org.hibernate.jpa.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>

